{
  "name": "trivia",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node bin/www",
    "dev": "react-scripts start & node bin/www",
    "build": "react-scripts build",
    "test": "react-scripts test"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "dependencies": {
    "@kennethormandy/react-fittext": "^0.6.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "^5.5.11",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router": "^3.2.1",
    "react-scripts": "3.0.1"
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "1.17.1"
  },
  "proxy": "http://localhost:4000",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "eslintIgnore": [
    "build"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
